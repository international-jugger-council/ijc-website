{% macro headerHero(id, label) %}
<header id="{{ id }}" class="hero is-medium">
  <div class="hero-body">
    <div class="container">
      <h2>{{ label }}</h2>
    </div>
  </div>
</header>
{% endmacro %}

{% macro pageSection(id) %}
<div class="ijc-blurb container">
  {% include lang + '/' + id + '.njk' %}
</div>
{% endmacro %}
